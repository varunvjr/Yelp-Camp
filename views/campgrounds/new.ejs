<%- include("../partials/header")%>

<div class="container text-center">
<div>
	<h3 style="text-center;">
		Create a New Campground
	</h3>
	
</div>
	<form style="margin-top:100px;"action="/campgrounds" method="POST">
  <div class="form-group">
    <input style="width:400px;margin:0 auto;"type="text" name="name"class="form-control text-center" id="exampleInputCampground" aria-describedby="emailHelp" placeholder="Enter a campground name">
  </div>
	<div class="form-group">
    <input style="width:400px;margin:0 auto;"type="number" name="price"class="form-control text-center" id="exampleInputCampground" aria-describedby="emailHelp" placeholder="Price" min="0.01" step="0.01">
  </div>
  <div class="form-group">
        <input style="width:400px;margin:0 auto;"type="text" name="image"class="form-control text-center" id="exampleInputImage" placeholder="Enter an image url">
  </div>
		<div class="form-group">
        <input style="width:400px;margin:0 auto;"type="text" name="description"class="form-control text-center" id="exampleInputImage" placeholder="Enter the description">
  </div>
		
  <a class="btn btn-primary"href="/campgrounds">GoBack</a> <input type="submit" class="btn btn-primary" value="Submit">
</form>
	
</div>

